version: '2'

services:

  server:
    build: .
    restart: always
    ports:
      - 9192:8080
    depends_on:
      - mysql-recollect
      - adminer
    environment:
      - SPRING_DATASOURCE_URL=jdbc:mysql://mysql-recollect:3306/reCollect
    networks:
      cool_network:
        aliases:
          - server
    links:
      - "mysql-recollect:mysql-recollect"

  mysql-recollect:
    image: mysql
    restart: always
    environment:
      MYSQL_DATABASE: 'reCollect'
      MYSQL_USER: 'adminrc'
      MYSQL_PASSWORD: 'admin'
      MYSQL_ROOT_PASSWORD: 'password'
    ports:
      - "3306:3306"
    expose:
      - "3306"
    networks:
      cool_network:
        aliases:
          - mysql-recollect
        ipv4_address: 10.5.0.6

  adminer:
    image: adminer
    restart: always
    ports:
      - "8081:8080"

networks:
  cool_network:
    driver: bridge
    ipam:
     config:
       - subnet: 10.5.0.0/16
         gateway: 10.5.0.1
         
